<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/7.0.3/video-js.css" rel="stylesheet">
    <!-- If you'd like to support IE8 (for Video.js versions prior to v7) -->
  <script src="http://vjs.zencdn.net/ie8/ie8-version/videojs-ie8.min.js"></script>
  </head>

  <body>
    <div class="flex-content-container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'See all courses', courses_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav right">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
            <li class="nav-item">
              <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Log in', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class= "nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link bold' %>
            </li>
          </ul>
          <% end %>
        </div>
      </nav>

      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

        <%= yield %>
    </div>  

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3 footer-box">
            <b>Teachers</b>
            <br />
            <%= link_to 'Teach a Course', new_instructor_course_path %>
            <br />
            <%= link_to 'My Dashboard', dashboard_path %>
          </div>
          <div class="col-12 col-sm-3 footer-box">
            <b>About</b>
            <br />
            <%= link_to 'Team', '#' %>
            <br />
            <%= link_to 'Careers', '#' %>
            <br />
            <%= link_to 'Privacy Policy', privacy_path %>
          </div>
          <div class="col-12 col-sm-3 footer-box">
            <b>Contact</b>
            <br />
            brian.kichler@gmail.com
            <br />
            2453 Kimberly Ct
            <br />
            Carlsbad, CA 92008
          </div>
          <div class="col-12 col-sm-3 social footer-box">
            <b>Social</b>
            <br />
            <br />
            <%= link_to 'http://bkichler.github.io' do %>
                <span class="fa fa-github-square fa-2x social-button"></span>
              <% end %>
              <%= link_to 'https://www.linkedin.com/in/briankichler/' do %>
                <span class="fa fa-linkedin-square fa-2x social-button"></span>
              <% end %>
              <%= link_to 'https://twitter.com/BrianKichler' do %>
                <span class="fa fa-twitter-square fa-2x social-button"></span>
              <% end %>
          </div>
         </div>
      </div>
    </div>
  </body>
</html>
